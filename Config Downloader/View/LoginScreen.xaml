<Window x:Class="Config_Downloader.View.LoginScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="LoginScreen" Height="179" Width="462"
    WindowStartupLocation="CenterScreen"
    Icon="../Source/Icon/ECTunes Logo.ico" 
    AllowsTransparency="True"
    ShowInTaskbar="True"
    Background="Transparent"
    WindowStyle="None"
    SizeToContent="WidthAndHeight"
    FocusManager.FocusedElement= "{Binding ElementName=tbxPassword}">
    <Border CornerRadius="0"
        BorderBrush="#FFB9B9B9"
        BorderThickness="1"
        Margin="24"
        Padding="4" Background="White">
        <Border.Effect>
            <DropShadowEffect Color="Gray"
                Opacity=".50"
                ShadowDepth="16" />
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="45*" />
                <RowDefinition Height="35*" />
                <RowDefinition Height="41*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0"
                Grid.Row="0">
                <Image Name="imgKey"
                    Margin="0,0,10,8"
                    Source="/Config Downloader;component/Source/Icon/ECTunes Logo.ico" Height="36">
                </Image>
            </StackPanel>
            <Label x:Name="lblTitle" Grid.Column="1"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                FontSize="16"
                Margin="10,10,10,0">Please Login To Access This Application
            </Label>
            <Label Grid.Column="1"
                Grid.Row="1">Password</Label>
            <PasswordBox Grid.Column="2"
                Grid.Row="1"
                ToolTip="Enter Your Password"
                x:Name="tbxPassword" Margin="0,2,23,6" />

            <StackPanel Grid.Column="2"
                Grid.Row="2"
                Margin="41,10,44,10"
                HorizontalAlignment="Center"
                Orientation="Horizontal" Width="155">
                <Button x:Name="btnLogin"
            		IsDefault="True"
            		Content="Login"
            		Click="btnLogin_Click" Margin="0,0,5,0" Width="65" Background="{x:Null}" />
                <Button x:Name="btnCancel"
                	IsCancel="True"
                	Content="Cancel"
                	Click="btnCancel_Click" Width="65" Background="{x:Null}"/>
            </StackPanel>
        </Grid>
    </Border>
